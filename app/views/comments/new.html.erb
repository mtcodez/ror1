<h1>New Comment</h1>

<%= form_for :comment, url: {action: "create"} do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :author %><br>
    <%= f.text_area :author %>
  </p>

  <p>
  	<%= f.label :contents %><br>
  	<%= f.text_area :contents %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>