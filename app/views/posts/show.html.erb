<div class="col-sm-8 blog-main">
<div class="blog-post">
	<h2 class="blog-post-title"><%= @post.title %></h2>
	<p class="blog-post-meta">August 1, 2014 by <a href="#"><%= @post.author %></a>
	</p>
	<p><%= @post.contents %></p>
</div>
<ul id="comments">  
  <% @comments.each do |comment| %>  
    <li><%= comment.contents %></li>  
  <% end %>  
</ul>  
</div>